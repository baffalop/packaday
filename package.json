{
  "name": "packaday",
  "description": "A datepicker with a puzzling UI",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:app && vite build",
    "build:app": "opam exec -- dune build @app",
    "build:tests": "opam exec -- dune build @ct",
    "build:all": "opam exec -- dune build @app @ct",
    "preview": "vite preview",
    "pages": "pnpm build && gh-pages -d dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "ts": "tsc --noEmit",
    "dune": "pnpm build:app",
    "dune:watch": "pnpm build:app --watch",
    "test": "pnpm test:dune && pnpm test:ct && pnpm test:e2e",
    "test:dune": "dune runtest",
    "test:e2e": "playwright test tests/e2e --reporter=list",
    "test:ct": "pnpm build:tests && playwright test -c playwright-ct.config.ts --reporter=list",
    "test:ui": "playwright test --ui",
    "test:ct-ui": "pnpm build:tests && playwright test --ui -c playwright-ct.config.ts",
    "test:snap": "pnpm test:ct --update-snapshots && pnpm test:e2e --update-snapshots",
    "test:ct-report": "pnpm build:tests && playwright test -c playwright-ct.config.ts",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:debug": "playwright test --debug"
  },
  "packageManager": "pnpm@10.19.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "vite": "^7.3.1"
    },
    "patchedDependencies": {
      "vite-plugin-melange": "patches/vite-plugin-melange.patch"
    }
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.58.1",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "eslint": "^9.39.2",
    "gh-pages": "^6.3.0",
    "neostandard": "^0.12.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-melange": "^3.10.0"
  }
}
