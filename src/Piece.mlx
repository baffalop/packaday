type t = [
  | `Rect
  | `Thumb
  | `Corner
  | `Snake
  | `U
  | `L
  | `T
  | `Z
] [@@mel.string]

module Button = struct
  let[@react.component] make ~(t:t) () =
    <button
      type_="button"
      className="piece-btn w-8 h-8 bg-rose-700 border border-rose-600 cursor-pointer"
      onClick=(fun _ -> Js.Console.log t)
    />
end
